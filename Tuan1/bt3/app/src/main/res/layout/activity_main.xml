<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- bo góc (tạo bên dưới) -->
    android:padding="8dp"
    android:src="@drawable/ic_arrow_back"          <!-- Vector Asset -->
    android:contentDescription="@string/back"
    app:tint="?attr/colorOnSurface"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="16dp"/>

    <!-- Nút edit góc phải -->
    <!-- Vector Asset -->
    android:contentDescription="@string/edit"
    app:tint="?attr/colorOnSurface"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="16dp"/>

    <!-- Ảnh đại diện ở giữa -->
    <!-- ảnh của bạn -->
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dòng 1: Tên -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_round_12"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_round_12"
        android:padding="8dp"
        android:src="@drawable/ic_edit"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:src="@drawable/tui_circle"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng Khoa"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dòng 2: Địa điểm -->
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đaklak, Việt Nam"
        android:textSize="14sp"
        android:textColor="#99000000"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>